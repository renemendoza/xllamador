<% form.inputs do %>
  <%= form.input :username, :label => 'Username' %>
  <%= form.input :email, :label => 'Email' %>
  <%= form.input :password, :label => 'Password' %>
  <%= form.input :password_confirmation, :label => 'Password confirmation' %>
  <%= form.input :roles, :as => :check_boxes, :label => 'Roles', :collection => User::ROLES%>
<% end %>
<% form.buttons do %>
  <%= form.commit_button %>
<% end %>
